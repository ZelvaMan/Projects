@using ProductsManager.Models

@{
	ViewBag.Title = "title";
	Layout = "_Layout";
	Order order = ViewBag.order;
}

<h2>Info about order @order.orderId</h2>

				<table class="table table-striped table-sm">
					<thead>
					<tr>
						<th>order Id</th>
						<th>Product Id</th>
						<th>Quantity</th>
						<th>Total Price</th>
					</tr>
					</thead>
					<tbody>

					@foreach (OrderItem ord in order.OrderItems)
					{
						<tr>
							<td>@ord.OrderId</td>
							<td>@ord.ProductID</td>
							<td>@ord.Quantity</td>
							<td>@ord.TotalPrice</td>
						</tr>
					}
					<tr>
						<td>Total</td>
						<td></td>
						<td>@order.TotalNumberOfProducts</td>
						<td>@order.TotalPrice</td>
					</tr>
					</tbody>
				</table>
